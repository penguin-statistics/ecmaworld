{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Client Library (w/ DOM & JSX)",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "target": "es6",
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "jsx": "react-jsx"
  }
}
